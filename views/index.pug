extends layout.pug

block content

  article.portfolio-intro

    h1 My Portfolio

    p Portfolio of a full stack javascript developer in development


  article.portfolio-project-thumbs
    .projects-box.box.grid

      each project in projects
        .cell
          a(href=`/projects/${project.id}`)
            img.thumbnail(src=`${project.image_urls[0]}`, alt=`${project.description}`)
            h5= project.project_name

